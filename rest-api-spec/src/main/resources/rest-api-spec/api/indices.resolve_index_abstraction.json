{
  "indices.resolve_index_abstraction":{
    "documentation":{
      "url":"https://www.elastic.co/guide/en/elasticsearch/reference/master/indices-resolve-index-abstraction.html",
      "description":"Returns information about any matching indices, aliases, and data streams"
    },
    "stability":"experimental",
    "url":{
      "paths":[
        {
          "path":"/_resolve_index_abstraction/{index}",
          "methods":[
            "GET",
            "POST"
          ],
          "parts":{
            "index":{
              "type":"list",
              "description":"A comma-separated list of names or wildcard expressions"
            }
          }
        }
      ]
    },
    "params":{
      "expand_wildcards":{
        "type":"enum",
        "options":[
          "open",
          "closed",
          "hidden",
          "none",
          "all"
        ],
        "default":"open",
        "description":"Whether wildcard expressions should get expanded to open or closed indices (default: open)"
      }
    }
  }
}
