{
  "fleet.search":{
    "documentation":{
      "url": null,
      "description": "Search API where the search will only be executed after specified checkpoints are available due to a refresh. This API is design for internal use by the fleet server project."
    },
    "stability":"experimental",
    "visibility":"public",
    "headers":{
      "accept": [ "application/json"],
      "content_type": ["application/json"]
    },
    "url":{
      "paths":[
        {
          "path":"/{index}/_fleet/_search",
          "methods":[
            "GET",
            "POST"
          ],
          "parts":{
            "index":{
              "type":"string",
              "description":"The name of the index."
            }
          }
        }
      ]
    },
    "params":{
      "after_checkpoints_refreshed":{
        "type":"list",
        "description":"Comma separated list of checkpoints",
        "default":""
      },
      "timeout":{
        "type":"time",
        "description":"Explicit operation timeout"
      }
    },
    "body":{
      "description":"The search definition using the Query DSL"
    }
  }
}
