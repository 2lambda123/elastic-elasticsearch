{
    "person":{
        "dynamic_templates":[
            {
                "template_1":{
                    "path_match":"obj1.obj2.*",
                    "mapping":{
                        "store":"no"
                    }
                }
            },
            {
                "template_2":{
                    "path_match":"obj1.*",
                    "mapping":{
                        "store":"yes"
                    }
                }
            },
            {
                "template_3":{
                    "path_match":"*.obj4.*",
                    "mapping":{
                        "type":"string"
                    }
                }
            },
            {
                "template_4":{
                    "path_match":"*.title*",
                    "mapping":{
                        "type": "multi_field",
                        "path":"just_name",
                        "fields":{
                            "{name}": {"type": "{dynamic_type}", "store":"no"},
                            "{path}": {"type": "{dynamic_type}", "store":"yes"}
                        }
                    }
                }
            }
        ]
    }
}