//
// Commands on geo test data
//

showTables
SHOW TABLES "geo";

 name:s        | type:s
geo       |BASE TABLE
;

// DESCRIBE

describe
DESCRIBE "geo";

       column:s      |   type:s
city                 | VARCHAR
location             | OTHER
region               | VARCHAR
shape                | OTHER
;

