FROM ${base_image} AS builder

USER root

RUN mkdir /opt/plugins-archive

COPY plugins-archive/* /opt/plugins-archive/

RUN chown -R root.root /opt/plugins-archive \\
    && chmod -R 0555 /opt/plugins-archive \\
    && chmod -R 0444 /opt/plugins-archive/*

FROM ${base_image}

COPY --from=builder /opt/plugins-archive /opt/plugins-archive
