# Configure a custom Czech analyzer.
POST /myindex/_close

PUT /myindex/_settings
{
  "settings": {
    "analysis": {
      "filter": {
        "czech_stop": {
          "type":       "stop",
          "stopwords":  "_czech_"
        },
        "czech_keywords": {
          "type":       "keyword_marker",
          "keywords":   []
        },
        "czech_stemmer": {
          "type":       "stemmer",
          "language":   "czech"
        }
      },
      "analyzer": {
        "czech_analyzer": {
          "tokenizer":  "standard",
          "filter": [
            "lowercase",
            "czech_stop",
            "czech_keywords",
            "czech_stemmer"
          ]
        }
      }
    }
  }
}

POST /myindex/_open